{
    "manifest_version": 2,
    "name": "Weather Forecast",
    "version": "0.6.9",
    "description": "百度天气预报。",
    "icons": {
        "48": "icons/icon48x48.png"
    },
    "permissions": [
        "*://www.baidu.com/*",
        "*://*.bdstatic.com/*",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "browser_style": true,
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16x16.png",
            "32": "icons/icon32x32.png"
        }
    },
    "options_ui": {
        "page": "options/options.html"
    }
}