{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "browser": true,
        "webextensions": true
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error"
        ],
        "no-console": "off",
        "no-var": "error"
    }
}